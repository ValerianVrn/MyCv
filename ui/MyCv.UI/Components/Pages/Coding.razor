@page "/coding"
@layout PageLayout
@using MyCv.UI.Components.Layout
@using MyCv.UI.Components.Shared

@inject IStringLocalizer<Resource> Localizer

<ContentPage PageLink="/coding" PageTitle="Coding practices">
    <Header>
        <ContentHeader HeaderId="introduction" HeaderName="Introduction" Chips="@(["Clean code", "Best practices", "Git flow", "Testing"])">
            <Content>
                <MudText Typo="Typo.body1">Appliquer les bonnes pratiques permet d'assurer la maintenabilité du code, l'homogénéisation des développements...</MudText>
                <MudAlert Severity="Severity.Success">
                    En tant que tech lead :<br />
                    - je m'assure que les meilleures pratiques sont appliquées (documentation, code review, transmission orale...)<br />
                    - je garantis une couverture de code élevée avec des tests unitaires systématiques<br />
                </MudAlert>
            </Content>
        </ContentHeader>
    </Header>
    <Sections>
        <CodingBestPractices></CodingBestPractices>
        <CodingGit></CodingGit>
        <CodingDesignPatterns></CodingDesignPatterns>
        <CodingUnitTests></CodingUnitTests>
        <CodingFunctionalTests></CodingFunctionalTests>
    </Sections>
</ContentPage>
