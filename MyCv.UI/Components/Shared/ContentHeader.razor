<MudItem md="12">
    <MudText Typo="Typo.h2" Align="Align.Left" id="@HeaderId">
        @HeaderName
        @if (Chips?.Any() ?? false)
        {
            foreach(var chip in Chips)
            {
                <MudChip T="string" Color="Color.Default">@chip</MudChip>
            }
        }
    </MudText>
    @Content
</MudItem>

@code {
    [CascadingParameter]
    public ContentPage ContentPage { get; set; }

    [Parameter]
    public required string HeaderId { get; set; }

    [Parameter]
    public required string HeaderName { get; set; }

    [Parameter]
    public List<string>? Chips { get; set; }

    [Parameter]
    public RenderFragment? Content { get; set; }

    /// <inheritdoc/>
    protected override void OnParametersSet()
    {
        ContentPage.RegisterSection(HeaderId, HeaderName);
    }
}
