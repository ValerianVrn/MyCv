        _domainEvents = (await InsightService.GetDomainEvents(_visitorId)).ToList();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            _visitorId = await VisitorService.GetVisitorId();
        }
    }

    private async Task ItemUpdated(MudItemDropInfo<DropItem> dropItemInfo)
    {
        var currentZone = dropItemInfo.Item.Place;
        var newZone = dropItemInfo.DropzoneIdentifier;
        var currentIndex = dropItemInfo.Item.Priority;
        var newIndex = dropItemInfo.IndexInZone;

        if (currentZone == StreetZone && newZone == YouZone)
        {
            // Intent added.
            // TODO: handle error.
            _ = await InsightService.AddIntent(_visitorId, dropItemInfo.Item.Id, newIndex);

            // Rank up other items in the same zone with fewer priority.
            foreach (var dropItem in _dropItems.Where(d => d.Place == YouZone && d.Priority >= newIndex))
            {
                dropItem.Priority += 1;
            }
        }
        else if (currentZone == YouZone && newZone == StreetZone)
        {
            // Intent removed.
            _ = await InsightService.RemoveIntent(_visitorId, dropItemInfo.Item.Id);

            // Rank down other items in the same zone with fewer priority.
            foreach (var dropItem in _dropItems.Where(d => d.Place == YouZone && d.Priority >= currentIndex))
            {
                dropItem.Priority -= 1;
            }
        }
        else if (currentZone == YouZone && newZone == YouZone && currentIndex != newIndex)
        {
            // Priority changed.
            _ = await InsightService.ChangePriority(_visitorId, dropItemInfo.Item.Id, newIndex);

            // Rank down/up other items in the same zone.
            if (currentIndex > newIndex)
            {
                foreach (var dropItem in _dropItems.Where(d => d.Place == YouZone && d.Id != dropItemInfo.Item.Id && d.Priority < currentIndex && d.Priority >= newIndex))
                {
                    dropItem.Priority += 1;
                }
            }
            else if (newIndex > currentIndex)
            {
                foreach (var dropItem in _dropItems.Where(d => d.Place == YouZone && d.Id != dropItemInfo.Item.Id && d.Priority > currentIndex && d.Priority <= newIndex))
                {
                    dropItem.Priority -= 1;
                }
            }
        }

        // Update the domain events table.
        // TODO: push service for updates.
        _domainEvents = (await InsightService.GetDomainEvents(_visitorId)).ToList();

        // Update the podium.
        // TODO: push service for updates.
        var newPodium = (await InsightService.GetPodium(_visitorId)).ToDictionary();
        _podium.ElementAt(0).Intent = newPodium.ContainsKey(0) ? _dropItems.First(d => d.Id.Equals(newPodium[0])).ShortName : "";
        _podium.ElementAt(1).Intent = newPodium.ContainsKey(1) ? _dropItems.First(d => d.Id.Equals(newPodium[1])).ShortName : "";
        _podium.ElementAt(2).Intent = newPodium.ContainsKey(2) ? _dropItems.First(d => d.Id.Equals(newPodium[2])).ShortName : "";

        // Update the drop item.
        dropItemInfo.Item.Priority = newIndex;
        dropItemInfo.Item.Place = newZone;
    }
}
