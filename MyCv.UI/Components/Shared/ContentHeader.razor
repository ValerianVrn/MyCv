<MudItem md="12">
    <MudText Typo="Typo.h2" Align="Align.Left">
        @HeaderName
        @MudChips
    </MudText>
    @Content
</MudItem>

@code {
    [Parameter]
    public required string HeaderName { get; set; }

    [Parameter]
    public RenderFragment? MudChips { get; set; }

    [Parameter]
    public RenderFragment? Content { get; set; }
}
