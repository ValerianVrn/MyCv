@inherits LayoutComponentBase
@inject IStringLocalizer<Resource> Localizer
@layout MainLayout

<MudLayout>
    @* Left pane *@
    <MudDrawer Open="true" Variant="DrawerVariant.Persistent" Elevation="8">
        <MudDrawerHeader Class="mud-theme-tertiary">
            <MudStack>
                <MudStack Row="true">
                    <MudAvatar Size="Size.Large">
                        <MudImage Src="images/portrait.jpg" Alt="Avatar" />
                    </MudAvatar>
                    <MudText Typo="Typo.h6">Val√©rian Verona</MudText>
                </MudStack>
                <MudText Typo="Typo.subtitle1">@Localizer["JobTitle"]</MudText>
            </MudStack>
        </MudDrawerHeader>
        @* Required for not scrolling in drawer header *@
        <MudContainer Class="py-2" Style="overflow-y:scroll; max-height:stretch;">
            <NavMenu />
        </MudContainer>
    </MudDrawer>
    @* Page content *@
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="my-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

